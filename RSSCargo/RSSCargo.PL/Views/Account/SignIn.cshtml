@{
    ViewData["Title"] = "Sign In";
    Layout = "_SignLayout";
}

<form asp-controller="Account" asp-action="SignIn" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="sign-form">
  
  <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign In</h3>

  <div class="form-outline mb-4">
    <label class="form-label" for="email">Email address</label>
    <input type="email" name="email" id="email" class="form-control form-control-lg" placeholder="e.g., example@mail.com" required/>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="password">Password</label>
    <input type="password" name="password" id="password" class="form-control form-control-lg"  placeholder="e.g., · · · · · · · ·" required=""/>
  </div>

  <div class="pt-1 mb-4">
    <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
  </div>

  <p class="small mb-3 pb-lg-2"><a asp-controller="Account" asp-action="ForgotPassword" class="text-muted">Forgot password?</a></p>
  <p class="mb-0">Don't have an account? <a asp-controller="Account" asp-action="SignUp" class="link-secondary">Sign Up here</a></p>
</form>