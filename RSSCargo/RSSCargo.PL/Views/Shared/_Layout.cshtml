@using System.Security.Claims
@using System.Collections

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="icon" type="media/image/png" href="/media/image/package.png">
    <!-- For apple devices -->
    <link rel="apple-touch-icon" href="/media/image/package.png"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow shadow-sm py-2" aria-label="Header">
        <div class="container-fluid mx-3">
            <a class="navbar-brand" asp-controller="Rss" asp-action="Feeds">📦 RSS Cargo</a>
            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <span class="nav-link text-dark">@User.FindFirst(ClaimTypes.Name)!.Value</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="UserSignOut">Sign Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="d-flex flex-grow-1">
    <nav class="d-flex flex-column" aria-label="SideMenu">
        @* User feed side menu *@
        <div class="sidebar border-bottom box-shadow shadow m-3 mr-0">
            <ul class="list-unstyled">
                <li class="mb-1">
                    <a asp-controller="Rss" asp-action="AddFeed" class="btn btn-light" role="button">Your Feeds</a>
                </li>
                <li class="mb-1">
                    <button class="btn btn-light align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#feeds-collapse" aria-expanded="false">
                        Followed
                    </button>
                    <div class="collapse" id="feeds-collapse">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            @foreach (var (item1, item2) in (IEnumerable<Tuple<int, string>>) ViewData["UserFeeds"]!)
                            {
                                <li>
                                    <a asp-controller="Rss" asp-action="Feeds" asp-route-feed-id="@item1" class="link-dark rounded">
                                        @item2
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </li>
            </ul>
        </div>

        @* Cargo feed side menu *@
        <div class="sidebar border-bottom box-shadow shadow m-3 mr-0">
            <ul class="list-unstyled">
                <li class="mb-1">
                    <a asp-controller="Rss" asp-action="Cargos" class="btn btn-light" role="button">Follow new</a>
                </li>
                <button class="btn btn-light align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#cargos-collapse" aria-expanded="false">
                    Followed
                </button>
                <div class="collapse" id="cargos-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        @foreach (var (item1, item2) in (IEnumerable<Tuple<int, string>>) ViewData["UserCargos"]!)
                        {
                            <li>
                                <a asp-controller="Rss" asp-action="Cargos" asp-route-feed-id="@item1" class="link-dark rounded">
                                    @item2
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </ul>
        </div>
    </nav>
    <div class="border-bottom box-shadow shadow m-3 flex-grow-1 pt-2">
        @RenderBody()
    </div>
</main>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>